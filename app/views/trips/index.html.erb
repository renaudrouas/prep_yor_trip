

<h1>Liste des voyages</h1>
<div class="container">
  <div class="row">
    <%@trips.each do |trip| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card carrousel-card ">
          <strong><p><%=trip.title %></p></strong>
          <p><%=trip.destination %></p>
          <div>
            <%= link_to 'Voir',  trip_path(trip), class: "btn btn-primary"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-center" style="margin: 40px;">
  <%= link_to 'Ajouter un voyage', new_trip_path, class: "btn btn-primary" %>
  </div>
</div>

