
<h1><%=@trip.title%></h1>

  <div class="wrapper">
    <nav id="sidebar">
      <ul class="list-unstyled components">
            <li>
              <% if @travels.empty? %>
                <%= link_to new_trip_travel_path(@trip) do %>
                  <i class="fa fa-plane"></i>
                <% end %>
              <% else %>
                <%= link_to trip_travels_path(@trip) do %>
                  <i class="fa fa-plane"></i>
                <% end %>
              <% end %>

            </li>
            <li>
              <% if @accomodations.empty? %>
                <%= link_to new_trip_accomodation_path(@trip) do %>
                  <i class="fa fa-home"></i>
                <% end %>
              <% else %>
                <%= link_to trip_accomodations_path(@trip) do %>
                   <i class="fa fa-home"></i>
                  <% end %>
              <% end %>
            </li>
            <li>
              <% if @diaries.empty? %>
                <%= link_to new_trip_diary_path(@trip) do %>
                  <i class="fa fa-book"></i>
              <% end %>
              <% else %>
              <%= link_to trip_diaries_path(@trip) do %>
                  <i class="fa fa-book"></i>
                  <% end %>
              <% end %>
            </li>
      </ul>
    </nav>
  </div>
    <div class="container">
      <div class= "row">
        <div class= "col-xs-6">
          <div class="card two-card-container">
            <div class="two-card-title">
                 <h2> Départ pour :</h2>
