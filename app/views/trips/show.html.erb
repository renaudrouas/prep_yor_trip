    <nav id="sidebar">
      <ul class="list-unstyled components">
            <li>
              <% if @travels.empty? %>
                <%= link_to new_trip_travel_path(@trip) do %>
                  <i class="fa fa-plane"></i>
                <% end %>
              <% else %>
                <%= link_to trip_travels_path(@trip) do %>
                  <i class="fa fa-plane"></i>
                <% end %>
