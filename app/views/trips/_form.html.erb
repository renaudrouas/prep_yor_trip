
  <%= simple_form_for(@trip) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs form-color my-form-box">
      <%= f.input :title,
            placeholder: 'My new trip',
            input_html: { class: 'my-input' },
            label_html: { class: 'my-label' } %>
      <%= f.input :destination,
            placeholder: 'USA, Germany',
            input_html: { class: 'pac-input' },
            label_html: { class: 'my-label' } %>
      <%= f.input :start_date,
            placeholder: 'Date',
            input_html: { class: 'my-input' },
            label_html: { class: 'my-label' },
            html5: true %>
      <%= f.input :end_date,
            placeholder: 'Date',
            input_html: { class: 'my-input' },
            label_html: { class: 'my-label' },
            html5: true %>
    </div>
    <div class="form-actions ">
        <%= f.button :submit, class:'btn-trip' %>
    </div>
  <% end %>

