
  <%= simple_form_for(@trip) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs form-color">
      <%= f.input :title, placeholder: 'My new trip', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :destination, placeholder: 'USA, Germany', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :start_date, placeholder: 'Date', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :end_date, placeholder: 'Date', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
    </div>
    <div class="form-actions btn-medium my-button">
      <%= f.button :submit %>
    </div>
  <% end %>

