<div class="card two-card-container">
  <div class="row">
    <div class="col-xs-12">
      <div class="show-trip-info-picture" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= image_path choose_country_img(@trip.destination.downcase) %>');">
      </div>

    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <p> Départ pour :</p>
      <h2><%= @trip.destination.capitalize %> </h2>
      <p> <%#= @flag %></p>
    </div>

    <div class="col-xs-6">
      <p> Le :</p>
      <h2> <%= @trip.start_date %></h2>
    </div>
  </div> <!-- title -->

  <div class="row">
    <div class="col-xs-6">
      <h2> <i>Information <%= image_tag "information.png", class: "icon-titre" %> </i> </h2>
      <% if @country_info.nil? %>
      <p> Désolée le pays n'existe pas. </p>
      <% else %>
      <p><i><%= image_tag "capitale.png", class: "icon-info" %></i>   <%=  @country_info.capital %></p>
      <p><i><%= image_tag "heure.png", class: "icon-info" %></i>   <%=  @country_info.timezones.first %></p>
      <p><i><%= image_tag "code-telephone.png", class: "icon-info" %></i>   + <%=  @country_info.callingCodes.first %></p>
      <p><i><%= image_tag "monnaie.png", class: "icon-info" %></i>   <%=  @country_info.currencies.first %></p>
      <p><i><%= image_tag "langue-1.png", class: "icon-info" %></i>   <%=  @country_info.languages.first %> </p>
      <% end %>
    </div>


    <div class="col-xs-6">
      <h2> <i>Meteo <%= image_tag "meteo.png", class: "icon-titre" %> </i> </h2>
      <p> <i><%= image_tag "temperature.png", class: "icon-info" %></i>   <%=  @weather.temp %> °C </p>
      <p> <i><%= image_tag "temperature-max_2.png", class: "icon-info" %></i>   <%=  @weather.max_temp %> °C </p>
      <p><i><%= image_tag "temperature-mini-2.png", class: "icon-info" %></i>   <%= @weather.min_temp %> °C </p>
    </div>
  </div> <!-- row 1 card 1 -->

  <div class="row">
    <div class="col-xs-6">
      <h2> <i><%= image_tag "vaccins.png", class: "icon-titre" %> Vaccins</i></h2>
      <% if @vaccination.nil? || @vaccination.first.nil? %>
        <p>Aucun vaccin nécessaire</p>
      <% else %>
        <p><%= @vaccination.first %></p>
      <% end %>
    </div>
  </div> <!-- row 2 card 1 -->
</div> <!-- card 1 -->
