<ul class="timeline">
  <%if @date_order != [] %>
    <%@start_date = @date_order.first.start_date %>
  <%end %>
  <% @date_order.each_with_index do |item, index|%>
  <%if index.even? %>
    <% if item.class == Stay %>
      <li>
        <%if item.start_date < Date.today %>
          <div class="timeline-badge-past">
            <i class="fa fa-map-marker"></i>
          </div>
        <%elsif item.start_date == Date.today %>
          <div class="timeline-badge-now">
            <i class="fa fa-map-marker"></i>
          </div>
        <%else %>
          <div class="timeline-badge">
            <i class="fa fa-map-marker"></i>
          </div>
        <% end %>
        <div class="timeline-panel">
          <div class="timeline-heading">
            <i class="timeline-icon"><%= image_tag "hotel copie.png"%></i>
              <p>Jour: <%=(item.start_date - @start_date).to_i%></p>
          </div>
          <div class="timeline-body">
            <p><%=item.accomodation.name%></p>
            <p><%=item.start_date%></p>
            <%= link_to 'Detail', trip_accomodation_path(@trip, item.accomodation), class: "btn-detail" %>
          </div>
        </div>
      </li>
    <%elsif item.class == Travel %>
      <li >
        <%if item.start_date < Date.today %>
          <div class="timeline-badge-past">
            <i class="fa fa-map-marker"></i>
          </div>
        <%elsif item.start_date == Date.today %>
          <div class="timeline-badge-now">
            <i class="fa fa-map-marker"></i>
          </div>
        <%else %>
          <div class="timeline-badge">
            <i class="fa fa-map-marker"></i>
          </div>
        <% end %>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <i class="timeline-icon"><%= image_tag "travel.png"%></i>
                <p>Jour: <%=(item.start_date - @start_date).to_i%></p>
              </div>
            <div class="timeline-body">
              <p><%=item.compagny_name%></p>
              <p><%=item.start_date%></p>
              <%= link_to 'Detail', trip_travel_path(@trip,item), class: "btn-detail" %>
            </div>
          </div>
      </li>
    <%else%>
      <li >
        <%if item.start_date < Date.today %>
          <div class="timeline-badge-past">
            <i class="fa fa-map-marker"></i>
          </div>
        <%elsif item.start_date == Date.today %>
          <div class="timeline-badge-now">
            <i class="fa fa-map-marker"></i>
          </div>
        <%else %>
          <div class="timeline-badge">
            <i class="fa fa-map-marker"></i>
          </div>
        <% end %>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <i class="timeline-icon"><%= image_tag "note-2.png"%></i>
              <p>Jour: <%=(item.start_date - @start_date).to_i%></p>
            </div>
            <div class="timeline-body">
              <p><%=item.title%></p>
              <%= link_to 'Detail', trip_diary_path(@trip,item), class: "btn-detail" %>
            </div>
          </div>
        <%end %>
      </li>
    <%else %>
      <% if item.class == Stay %>
      <li class="timeline-inverted">
        <%if item.start_date < Date.today %>
          <div class="timeline-badge-past">
            <i class="fa fa-map-marker"></i>
          </div>
        <%elsif item.start_date == Date.today %>
          <div class="timeline-badge-now">
            <i class="fa fa-map-marker"></i>
          </div>
        <%else %>
          <div class="timeline-badge">
            <i class="fa fa-map-marker"></i>
          </div>
        <% end %>
        <div class="timeline-panel">
          <div class="timeline-heading">
            <i class="timeline-icon"><%= image_tag "hotel copie.png"%></i>
              <p>Jour: <%=(item.start_date - @start_date).to_i%></p>
          </div>
          <div class="timeline-body">
            <p><%=item.accomodation.name%></p>
            <p><%=item.start_date%></p>
            <%= link_to 'Detail', trip_accomodation_path(@trip,item.accomodation), class: "btn-detail" %>
          </div>
        </div>
      </li>
        <%elsif item.class == Travel %>
          <li class="timeline-inverted">
            <%if item.start_date < Date.today %>
              <div class="timeline-badge-past">
                <i class="fa fa-map-marker"></i>
              </div>
            <%elsif item.start_date == Date.today %>
              <div class="timeline-badge-now">
                <i class="fa fa-map-marker"></i>
              </div>
            <%else %>
              <div class="timeline-badge">
                <i class="fa fa-map-marker"></i>
              </div>
            <% end %>
            <div class="timeline-panel">
              <div class="timeline-heading">
                <i class="timeline-icon"><%= image_tag "travel.png"%></i>
                  <p>Jour: <%=(item.start_date - @start_date).to_i%></p>
              </div>
            <div class="timeline-body">
              <p><%=item.compagny_name%></p>
              <p><%=item.start_date%></p>
              <%= link_to 'Detail', trip_travel_path(@trip,item), class: "btn-detail" %>
            </div>
          </div>
      </li>
  <%else%>
  <li >
    <%if item.start_date < Date.today %>
    <div class="timeline-badge-past">
      <i class="fa fa-map-marker"></i>
    </div>
    <%elsif item.start_date == Date.today %>
    <div class="timeline-badge-now">
      <i class="fa fa-map-marker"></i>
    </div>
    <%else %>
    <div class="timeline-badge">
      <i class="fa fa-map-marker"></i>
    </div>
    <% end %>
    <div class="timeline-panel">
      <div class="timeline-heading">
        <i class="timeline-icon"><%= image_tag "note-2.png"%></i>
      </div>
      <p>Jour: <%=(item.start_date - @start_date).to_i%></p>
      <div class="timeline-body">
        <p><%=item.title%></p>
      </div>
    </div>
    <%end %>
  </li >
  <%end %>
  <%end %>
</ul>
