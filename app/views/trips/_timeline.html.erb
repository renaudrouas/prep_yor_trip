        <p>Jour: <%=(item.start_date - @start_date).to_i%></p>
      </div>
      <div class="timeline-body">
        <p><%=item.title%></p>
        <p><%=item.address%></p>
      </div>
    </div>
    <%end %>
  </li >
  <%end %>
  <%end %>
</ul>
