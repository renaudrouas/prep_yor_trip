    <div class="col-xs-6">
      <div class="well">
        <% tasks.each do |task| %>
          <ul class="list-group checked-list-box">
            <li class="list-group-item" data-checked="<%= task.done? %>">
              <input
                class="check"
                type="checkbox"
                id="checkBox<%= task.id %>"
                data-task="<%= task.id %>"
                data-trip="<%= trip.id %>"
                checked="<%= task.done? %>"
              >
              <%= link_to task.title, trip_task_path(trip, task) %>
            </li>

            <%= link_to 'Destroy',
                  trip_task_path(trip, task),
                  method: :delete, data: { confirm: 'Etes vous sÃ»r?' },
                  class: "btn btn-primary" %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>

