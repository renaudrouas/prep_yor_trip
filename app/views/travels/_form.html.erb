
  <%= simple_form_for [@trip, @travel] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs form-color">
      <%= f.input :reservation_number, placeholder: 'Your reservation number', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :compagny_name, placeholder: 'RyanAir, Orange', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :start_date, placeholder: 'Date', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :end_date, placeholder: 'Date', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :address_in, placeholder: 'Date', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :address_out, placeholder: 'Date', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
    </div>
    <div class="form-actions btn-medium my-button">
      <%= f.button :submit %>
    </div>
  <% end %>



