
<div class="content">
  <div class="cards-container">
    <div class="bandeau" style="background-image: url('<%= asset_path "cover-travels.jpg" %>');">
      <!-- <p>bandeau</p> -->
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="text-center">
          <%= link_to 'Ajoutez un transport', new_trip_travel_path, class: "btn btn-primary" %>
          <%= link_to 'Dashboard', trip_path(@trip), class: "btn btn-default" %>
        </div>
        <% @travels.each do |travel| %>
            <div class="col-xs-12">
              <div class="table-responsive">
                <table class="table">
                  <tbody>
                    <tr>
                      <td class="white-cell"></td>
                      <td class="white-bottom-border"><h3>Lieux de départ</h3></td>
                      <td class="white-bottom-border"><p><%= travel.address_in.truncate_words(5) %></p></td>
                    </tr>
                    <tr>
                      <%if travel.mode == "bateau"  %>
                      <td class="white-cell">

                          <%= image_tag "bateau.png", class: "icon" %>
                        </td>
                    <%elsif travel.mode == "car"  %>
                      <td class="white-cell"><%= image_tag "car.png", class: "icon" %></td>
                    <%elsif travel.mode == "voiture"  %>
                      <td class="white-cell"><%= image_tag "voiture.png", class: "icon" %></td>
                    <%elsif travel.mode == "train"  %>
                      <td class="white-cell"><%= image_tag "train.png", class: "icon" %></td>
                    <%else%>
                      <td class="white-cell"><%= image_tag "avion-2.png", class: "icon" %></td>
                    <%end  %>
                      <td class="white-bottom-border"><h3>Lieux<br>d'arrivée</h3></td>
                      <td class="white-bottom-border"><p><%= travel.address_out.truncate_words(5) %></p></td>
                    </tr>
                    <tr>
                      <td class="white-cell"></td>
                      <td class="white-bottom-border"><h3>Date de départ</h3></td>
                      <td class="white-bottom-border"><p><%= l travel.start_date, format: :default_heure unless travel.start_date.nil? %> </p></td>

                    </tr>
                    <tr>
                      <td class="white-cell"><%= link_to 'Editer', edit_trip_travel_path(@trip, travel), class: "btn btn-primary" %></td>
                      <td class="white-bottom-border"><h3>Date d'arrivée</h3></td>
                      <td class="white-bottom-border"><p><%= l travel.end_date, format: :default_heure unless travel.end_date.nil? %></p></td>
                    </tr>
                    <tr>
                      <td class="white-cell">

                      </td>
                      <td class="white-bottom-border"><h3>Compagnie</h3></td>
                      <td class="white-bottom-border"><p><%= travel.compagny_name %></p></td>
                    </tr>
                    <tr>
                      <td class="white-cell"><%= link_to 'Supprimer', trip_travel_path(@trip, travel), method: :delete, data: { confirm: 'Êtes-vous sûr?' }, class: "btn btn-transport" %></td>
                      <td><h3>Numéro de réservation</h3></td>
                      <td><p><%= travel.reservation_number %></p></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          <% end %>
        </div>
        <div class="text-center">
          <%= link_to 'Ajoutez un transport', new_trip_travel_path, class: "btn btn-primary" %>
          <%= link_to 'Dashboard', trip_path(@trip), class: "btn btn-default" %>
        </div>
      </div>
      </div>
    <div class="map">
      <%= render 'shared/map', markers: @markers, path: @path, style: "width:100%; height:100vh" %>
    </div>
  </div>

</div>






