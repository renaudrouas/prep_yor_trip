<h1>Index Of Travels</h1>
<p><%=current_user.email%></p>
<%@travels.each do |travel|%>
<p><%=travel.reservation_number %></p>
<%= link_to 'Show',  trip_travel_path(@trip, travel)%>
<%end %>

<div class="container container-full">
  <div class="col-xs-12 col-sm-7">
    <div class="col-xs-12 travel-card-frame bandeau border-solid">
      <p>bandeau</p>
    </div>
    <div class="col-xs-12 travel-card-frame border-solid">
      <div class ="col-xs-3 border-solid inner-components">
         <div class="row border-solid">
           <%= image_tag "hotel.png"%>
         </div>
         <div class="row border-solid">
           <a href="" class="btn btn-trip">EDIT</a>
         </div>
         <div class="row border-solid">
           <a href="" class="btn btn-transport">DELETE</a>
         </div>
      </div>
      <div class="col-xs-9 border-solid inner-components">
         <div class="row border-solid">
           <div class="col-xs-6">
             <h3>Depart - Arriv√©e</h3>
           </div>
           <div class="col-xs-6">
             <h3>Nom de la ville - Pays</h3>
           </div>
         </div>
         <div class="row border-solid">
           <h3>Hotel Name</h3>
         </div>
         <div class="row border-solid">
           <h3>Adress</h3>
         </div>
         <div class="row border-solid">
           <h3>Phone number</h3>
         </div>
         <div class="row border-solid">
           <h3>Email</h3>
         </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-5 ">
    <div class ="travel-card-frame travel-card-frame-map border-solid">
      <%= image_tag "map-marseille.png", {id: 'map'} %>
    </div>
  </div>
</div>

