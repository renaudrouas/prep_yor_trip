

  <%= simple_form_for [@trip, @diary] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs form-color">
      <%= f.input :title, placeholder: 'Title of your diary', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :description, placeholder: 'RyanAir, Orange', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :date, placeholder: 'Date', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :address, placeholder: 'Address', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
    </div>
    <div class="form-actions btn-medium my-button">
      <%= f.button :submit %>
    </div>
  <% end %>



