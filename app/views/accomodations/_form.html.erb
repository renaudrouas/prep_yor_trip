<%= simple_form_for [@trip, @accomodation] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs form-color">

      <%= f.input :address, placeholder: 'Adresse', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :name, placeholder: 'Nom', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :e_mail, placeholder: 'email@email.com', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :phone_number, placeholder: 'Numéro de téléphone', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= f.input :kind, placeholder: 'kind', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
    </div>
    <%= f.simple_fields_for :stays do |s| %>
    <%= s.input :start_date, placeholder: '01/01/2000', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= s.input :end_date, placeholder: '01/01/2000', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= s.input :reservation_number, placeholder: 'Numero de réservation', input_html: { class: 'my-input' }, label_html: { class: 'my-label' } %>
      <%= s.input :trip_id, as: :hidden, input_html:{value:@trip.id}   %>

    <div class="form-actions">
       <%= s.button :submit, class: "btn btn-primary"%>
    </div>

    <% end %>
  <% end %>

